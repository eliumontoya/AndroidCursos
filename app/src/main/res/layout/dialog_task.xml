<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/cursoapp_background_app"
    android:orientation="vertical">

    <EditText
        android:id="@+id/etTaskNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:hint="Crear Task"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <RadioGroup
        android:id="@+id/rgCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/cat_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/cursoapp_business_category"
            android:checked="true"
            android:text="Trabajo"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/cat_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/cursoapp_personal_category"
            android:text="Personal"
            android:textColor="@color/white" />

        <RadioButton
            android:id="@+id/cat_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/cursoapp_other_category"
            android:text="Otra"
            android:textColor="@color/white" />
    </RadioGroup>

    <Button
        android:id="@+id/btnAddTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Crear"
        android:backgroundTint="@color/cursoapp_accent"/>


</LinearLayout>